{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit: Run app.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/Scripts/streamlit.exe" /* Windows */,
      //"program": "${workspaceFolder}/.venv/bin/streamlit", /* macOS/Linux */,
      // 가상환경 내에 설치 -> streamlit 가상환경 내부에 설치되어있음
      "args": ["run", "${workspaceFolder}/app.py"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
